<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container">
  <h1>Users</h1>

  <%= form_tag users_path, method: :get do %>
    <div class="form-group">
      <%= select_tag :role_id, options_for_select(Role.all.map{ |r| [r.name, r.id] }, params[:role_id]), include_blank: true, class: 'form-control' %>
    </div>
    <%= submit_tag 'Filter', class: 'btn btn-primary mb-3' %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.role.name %></td>
          <td>
            <%= link_to 'Show', user, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
</div>

</body>
</html>
